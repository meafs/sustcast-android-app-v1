<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StreamFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="55dp"
        android:paddingTop="50dp"
        android:paddingRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foregroundGravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="20dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toTopOf="@+id/txt_play_the"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/txt_play_the"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play the"
            android:textColor="@color/Black"
            android:textSize="23sp"
            app:layout_constraintBottom_toTopOf="@id/txt_stream"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_logo"

            />

        <TextView
            android:id="@+id/txt_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stream!"
            android:textColor="@color/Black"
            android:textSize="23sp"
            app:layout_constraintBottom_toTopOf="@id/bg_stream"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_play_the" />

        <ImageView
            android:id="@+id/bg_stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:padding="20dp"
            android:src="@drawable/stream"
            app:layout_constraintBottom_toTopOf="@+id/playstream_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_stream"
           />

        <Button

            android:id="@+id/playstream_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/play_button"
            android:drawablePadding="10dp"
            android:drawableTint="@color/grey700"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="Play the Stream Now!"
            android:textAllCaps="false"
            android:textColor="@color/grey700"
            app:layout_constraintBottom_toTopOf="@id/tv_currently_playing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg_stream"
            android:foregroundGravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_currently_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Currently Reading : "
            android:textColor="@color/grey700"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/tv_track_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playstream_button" />

        <TextView
            android:id="@+id/tv_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Track Name "
            android:textColor="@color/grey700"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/line_reading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_currently_playing" />


        <ImageView
            android:id="@+id/line_reading"
            android:layout_width="58dp"
            android:layout_height="5dp"
            android:src="@drawable/line_contributors"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_track_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>