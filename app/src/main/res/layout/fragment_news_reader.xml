<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewsReaderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="55dp"
        android:paddingTop="50dp"
        android:paddingRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="20dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toTopOf="@+id/txt_news"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            android:textColor="@color/Black"
            android:textSize="23sp"
            app:layout_constraintBottom_toTopOf="@id/txt_reader"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_logo" />

        <TextView
            android:id="@+id/txt_reader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reader!"
            android:textColor="@color/Black"
            android:textSize="23sp"
            app:layout_constraintBottom_toTopOf="@id/ic_bgStream"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_news" />

        <ImageView
            android:id="@+id/ic_bgStream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:padding="20dp"
            android:src="@drawable/news"
            app:layout_constraintBottom_toTopOf="@+id/button_news"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_reader"
            />

        <Button
            android:id="@+id/button_news"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/play_button"
            android:drawablePadding="10dp"
            android:drawableTint="@color/grey700"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="Read me the mews"
            android:textAllCaps="false"
            android:textColor="@color/grey700"
            app:layout_constraintBottom_toTopOf="@id/tv_currently_reading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_bgStream" />

        <TextView
            android:id="@+id/tv_currently_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Currently Reading : "
            android:textColor="@color/grey700"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/tv_BBC"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_news" />

        <TextView
            android:id="@+id/tv_BBC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="BBC News"
            android:textColor="@color/grey700"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/line_reading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_currently_reading" />


        <ImageView
            android:id="@+id/line_reading"
            android:layout_width="58dp"
            android:layout_height="5dp"
            android:src="@drawable/line_contributors"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_BBC" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>