<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="55dp"
        android:paddingTop="50dp"
        android:paddingRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:padding="20dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toTopOf="@+id/feedback_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <Button

            android:id="@+id/feedback_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/feedback"
            android:drawablePadding="10dp"
            android:drawableTint="@color/grey700"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="Feedback"
            android:textAllCaps="false"
            android:textColor="@color/grey700"
            app:layout_constraintBottom_toTopOf="@+id/facebook_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_logo"
            app:layout_constraintVertical_chainStyle="packed"
            style="?android:attr/borderlessButtonStyle"/>


        <Button
            android:id="@+id/facebook_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/facebook"
            android:drawablePadding="10dp"
            android:drawableTint="@color/grey700"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text=" Facebook Page"
            android:textAllCaps="false"
            android:textColor="@color/grey700"
            app:layout_constraintBottom_toTopOf="@id/rate_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feedback_button"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/rate_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/google_play"
            android:drawablePadding="10dp"
            android:drawableTint="@color/grey700"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="Rate the App"
            android:textAllCaps="false"
            android:textColor="@color/grey700"
            app:layout_constraintBottom_toTopOf="@id/logout_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/facebook_button"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/logout_button"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button"
            android:drawableLeft="@drawable/log_out"
            android:drawablePadding="10dp"
            android:drawableTint="@color/grey700"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textColor="@color/grey700"
            app:layout_constraintBottom_toTopOf="@id/tv_contributors"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rate_button"
            style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:id="@+id/tv_contributors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_the_contributors"
            android:textColor="@color/grey700"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@id/line_contributors"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logout_button" />


        <ImageView
            android:id="@+id/line_contributors"
            android:layout_width="96dp"
            android:layout_height="6dp"
            android:src="@drawable/line_contributors"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_contributors" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>